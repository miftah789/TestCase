<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MatchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d7ddff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#3240a0"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:text="1st" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#4052b5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_teama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#d7ddff"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Nama Team A" />

                <TextView
                    android:id="@+id/tv_teama_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#d7ddff"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    tools:text="999" />

                <Button
                    android:id="@+id/btn_teama_plus_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#d7ddff"
                    android:text="+1 Poim" />

                <Button
                    android:id="@+id/btn_teama_plus_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#d7ddff"
                    android:text="+2 Poim" />

                <Button
                    android:id="@+id/btn_teama_plus_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:background="#d7ddff"
                    android:text="+3 Poim" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3240a0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_teamb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#d7ddff"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Nama Team B" />

                <TextView
                    android:id="@+id/tv_teamb_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#d7ddff"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    tools:text="999" />

                <Button
                    android:id="@+id/btn_teamb_plus_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#d7ddff"
                    android:text="+1 Poim" />

                <Button
                    android:id="@+id/btn_teamb_plus_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#d7ddff"
                    android:text="+2 Poim" />

                <Button
                    android:id="@+id/btn_teamb_plus_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:background="#d7ddff"
                    android:text="+3 Poim" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="15dp"
            android:background="#5969bf"
            android:text="next"
            android:textColor="#d7ddff"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>